<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.testaudioenglish.viewmodel.ListeningToeicViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".View.ToeicView.MultipleChoiceToeicFragment">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/layoutReady"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginTop="90dp"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/toeic"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đề thi TOEIC 2024"
                    android:textSize="24sp"
                    android:paddingTop="8dp"
                    />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đây là phần mô tả cho đề thi TOEIC 2024. Hãy chuẩn bị sẵn sàng cho bài kiểm tra với các câu hỏi thú vị và thách thức."
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:lineSpacingExtra="4dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bắt đầu"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/background_no_radius_default"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/layoutPartFirst"
                android:visibility="gone"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/image"
                    android:src="@drawable/toeic"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/title"
                    android:text="Lắng nghe và chọn đáp án đúng!"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="Câu 1"
                    android:id="@+id/numberQuestion"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"></TextView>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:id="@+id/radioGroup"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:id="@+id/radioA"
                        android:text="A."
                        android:textSize="18sp"
                        android:layout_height="wrap_content"></RadioButton>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:id="@+id/radioB"
                        android:text="B."
                        android:textSize="18sp"
                        android:layout_height="wrap_content"></RadioButton>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:id="@+id/radioC"
                        android:text="C."
                        android:textSize="18sp"
                        android:layout_height="wrap_content"></RadioButton>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:id="@+id/radioD"
                        android:text="D."
                        android:textSize="18sp"
                        android:layout_height="wrap_content"></RadioButton>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/layoutPartThirdAndFour1"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/imageListeningThirdAndFour"
                    android:src="@drawable/toeic"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/title2"
                    android:text="Lắng nghe và chọn đáp án đúng!"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/layoutAllPartThirdAndFour1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:text="Câu 1"
                        android:id="@+id/numberQuestion1"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"></TextView>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:id="@+id/radioGroup1"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioA1"
                            android:text="A."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioB1"
                            android:text="B."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioC1"
                            android:text="C."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioD1"
                            android:text="D."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:id="@+id/layoutAllPartThirdAndFour2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:text="Câu 2"
                        android:id="@+id/numberQuestion2"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"></TextView>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:id="@+id/radioGroup2"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioA2"
                            android:text="A."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioB2"
                            android:text="B."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioC2"
                            android:text="C."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioD2"
                            android:text="D."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:id="@+id/layoutAllPartThirdAndFour3"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:text="Câu 3"
                        android:id="@+id/numberQuestion3"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"></TextView>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:id="@+id/radioGroup3"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioA3"
                            android:text="A."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioB3"
                            android:text="B."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioC3"
                            android:text="C."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/radioD3"
                            android:text="D."
                            android:textSize="18sp"
                            android:layout_height="wrap_content"></RadioButton>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>