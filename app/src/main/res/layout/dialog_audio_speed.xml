<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:gravity="center">

    <!-- Container for speed options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- List of TextViews for audio speed options -->
        <TextView
            android:id="@+id/audio_speed_text_08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:padding="12dp"
            android:text="0.8"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackground"
            android:gravity="center" />

        <TextView
            android:id="@+id/audio_speed_text_09"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:padding="12dp"
            android:text="0.9"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackground"
            android:gravity="center" />

        <TextView
            android:id="@+id/audio_speed_text_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:padding="12dp"
            android:text="1.0"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackground"
            android:gravity="center" />

        <TextView
            android:id="@+id/audio_speed_text_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:padding="12dp"
            android:text="1.1"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackground"
            android:gravity="center" />

        <TextView
            android:id="@+id/audio_speed_text_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:padding="12dp"
            android:text="1.2"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackground"
            android:gravity="center" />

        <TextView
            android:id="@+id/audio_speed_text_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:padding="12dp"
            android:text="1.3"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackground"
            android:gravity="center" />

        <TextView
            android:id="@+id/audio_speed_text_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:padding="12dp"
            android:text="1.4"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackground"
            android:gravity="center" />
        <TextView
            android:id="@+id/audio_speed_text_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:padding="12dp"
            android:text="1.5"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackground"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
