<!-- res/drawable/custom_radio_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái đã chọn -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/black"/> <!-- Màu nền khi đã chọn -->
            <stroke android:width="1dp" android:color="@color/black"/> <!-- Viền khi đã chọn -->
        </shape>
    </item>
    <!-- Trạng thái chưa chọn -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- Màu nền khi chưa chọn -->
            <stroke android:width="1dp" android:color="@color/black"/> <!-- Viền khi chưa chọn -->
        </shape>
    </item>
</selector>
